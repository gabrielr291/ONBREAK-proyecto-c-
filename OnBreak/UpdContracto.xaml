                </LinearGradientBrush>
            </Grid.Background>
            <Image Source="Imagenes/white_logo_transparent_background.png"  HorizontalAlignment="Left" Height="241" Margin="10,10,0,0" VerticalAlignment="Top" Width="260"/>
