                    <GradientStop Color="#FF0D0693" Offset="0.726"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="label" Content="Número de Contrato:" HorizontalAlignment="Left" Margin="335,30,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FFE8C7C7"/>
